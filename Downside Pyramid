int n = 4;
for (int i=n; i>=1; i--)
		 {
			 for (int j=1; j<=n-i; j++)
			 {
				 System.out.print(" ");
			 }
			 
			 
			 for (int j=1; j<=2*i-1; j++)
			 {
				 System.out.print("*");
			 }
			 System.out.println();
		 }
		 
(or)
	
	for (int i= n; i>= 1 ; i--)
	{
	System.out.print(" ".repeat(n-i));
	System.out.println("*".repeat(2*i-1));
	}
